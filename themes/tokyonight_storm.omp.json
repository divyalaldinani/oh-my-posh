{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": " {{ .Folder }} :: {{if .Root}}Admin{{end}}",
  "palette": {
    "main-bg": "#1e2127",          // Dark background
    "terminal-red": "#F5004F",     // Bright reddish pink
    "terminal-yellow": "#F9E400",  // Bright yellow
    "terminal-orange": "#FFAF00",  // Bright orange
    "terminal-purple": "#7C00FE",  // Bright purple
    "terminal-black": "#1e2127",   // Dark background
    "t-background": "p:main-bg"    // Set background for terminal
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "background": "transparent",
          "foreground": "p:terminal-purple",
          "template": "\u279c "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:terminal-orange",
          "properties": {
            "style": "folder"
          },
          "template": "<b>{{ .Path }}</b> <p:terminal-yellow>\u26a1</>"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:terminal-yellow",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:terminal-red{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0)}}p:terminal-yellow{{ end }}",
            "{{ if gt .Ahead 0 }}p:terminal-red{{ end }}",
            "{{ if gt .Behind 0 }}p:terminal-red{{ end }}"
          ],
          "template": "({{ .HEAD}})",
          "properties": {
            "fetch_status": true,
            "branch_icon": "\ue725 "
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:terminal-red",
          "template": " \uf00d"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "type": "command",
          "style": "plain",
          "foreground": "#F5004E",
          "properties": {
            "command": "git log --pretty=format:%cr -1 || date +%H:%M:%S",
            "shell": "bash"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:terminal-yellow",
          "style": "plain",
          "template": "\u25b6",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:terminal-red",
    "template": "\u279c "
  },
  "transient_prompt": {
    "background": "p:t-background",
    "foreground": "p:terminal-red",
    "template": "\u279c "
  },
  "final_space": true,
  "version": 2,
  "terminal_background": "p:t-background"
}
